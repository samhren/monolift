{
    "name": "monolift",
    "version": "1.0.0",
    "description": "Minimalist strength-training tracker",
    "private": true,
    "workspaces": [
        "apps/*"
    ],
    "scripts": {
        "dev": "run-p --print-label dev:api dev:mobile",
        "dev:api": "npm run dev --workspace=@monolift/api",
        "dev:mobile": "npm run dev --workspace=mobile",
        "build": "npm run build --workspace=@monolift/api && npm run build --workspace=mobile",
        "test": "npm run test --workspaces --if-present",
        "lint": "npm run lint --workspaces --if-present",
        "type-check": "npm run type-check --workspaces --if-present",
        "clean": "npm run clean --workspaces --if-present",
        "install-deps": "npm install",
        "db:start": "docker-compose up -d postgres",
        "db:stop": "docker-compose down",
        "db:restart": "npm run db:stop && npm run db:start",
        "db:logs": "docker-compose logs -f postgres",
        "db:reset": "docker-compose down -v && docker-compose up -d postgres",
        "db:studio": "npm run db:studio --workspace=@monolift/api",
        "db:generate": "npm run db:generate --workspace=@monolift/api",
        "db:push": "npm run db:push --workspace=@monolift/api",
        "db:migrate": "npm run db:migrate --workspace=@monolift/api"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "concurrently": "^8.2.0",
    "npm-run-all": "^4.1.5",
        "eslint": "^8.44.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^5.0.0",
        "husky": "^8.0.3",
        "prettier": "^3.0.0",
        "typescript": "^5.1.0"
    }
}